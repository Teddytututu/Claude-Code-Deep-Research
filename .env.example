# Deep Research System Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Time Budget Configuration
# =============================================================================

# Default time budget for research sessions (in minutes)
DEFAULT_TIME_BUDGET_MINUTES=60

# Multiplier for per-agent time allocation (0.8 = 80% of total budget)
PER_AGENT_TIME_MULTIPLIER=0.8

# =============================================================================
# MCP Configuration
# =============================================================================

# Maximum number of MCP tools to have available (recommended: <80)
MCP_TOOL_LIMIT=80

# Number of active MCP servers per session (recommended: 5-6)
ACTIVE_MCP_COUNT=6

# =============================================================================
# Storage Configuration
# =============================================================================

# Vector database backend: "memory" (in-memory) or "chroma" (persistent)
VECTOR_DB_BACKEND=memory

# Directory for persistent vector storage (when using chroma backend)
PERSIST_DIRECTORY=.chroma

# Research data storage directory
RESEARCH_DATA_DIR=research_data

# Research output directory
RESEARCH_OUTPUT_DIR=research_output

# =============================================================================
# Performance Configuration
# =============================================================================

# Multi-agent threshold (0.45 = 45% rule from Google/MIT research)
MULTI_AGENT_THRESHOLD=0.45

# API rate limit (requests per second)
API_RATE_LIMIT=10

# =============================================================================
# Visualization Configuration
# =============================================================================

# Default visualization format: "html", "png", "svg", "mermaid"
DEFAULT_VIZ_FORMAT=html

# Enable physics simulation in interactive visualizations
VIZ_ENABLE_PHYSICS=true
